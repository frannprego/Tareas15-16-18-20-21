<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_hoja_taller_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2 class="text-center">Orden de Preparación</h2>
                        <h3 class="text-center"><t t-esc="doc.name"/></h3>

                        <div class="row mt32 mb32">
                            <div class="col-6">
                                <strong>Cliente:</strong> <t t-esc="doc.partner_id.name"/><br/>
                                <strong>Fecha:</strong> <t t-esc="doc.date_order" t-options='{"widget": "date"}'/>
                            </div>
                        </div>

                        <table class="table table-sm o_main_table mt16">
                            <thead>
                                <tr>
                                    <th class="text-center">Check</th>
                                    <th>Producto</th>
                                    <th class="text-right">Cantidad</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="doc.order_line" t-as="line">
                                    <tr>
                                        <td class="text-center">☐</td>
                                        <td><span t-field="line.product_id.name"/></td>
                                        <td class="text-right">
                                            <span t-field="line.product_uom_qty"/>
                                            <span t-field="line.product_uom" groups="uom.group_uom"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>

                        <div class="mt64">
                            <p><strong>Firma del Operario:</strong> __________________________</p>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>